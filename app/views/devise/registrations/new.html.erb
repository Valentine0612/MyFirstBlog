<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, autocomplete: "user name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <% passwd_label = 'Password' %>
    <% if @minimum_password_length %>
      <% passwd_label << " (#{@minimum_password_length} characters minimum)" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", label: passwd_label %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.primary "Sign up" %>
  </div>
<% end %>
